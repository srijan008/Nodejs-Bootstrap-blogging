<!DOCTYPE html>
<html lang="en">
  <style>
    .fixed-size-image {
      width: 200px; /* Set the width */
      height: 150px; /* Set the height */
      object-fit: cover; /* This will ensure the image covers the entire area */
      
    }
    .card{
      margin: 9px;
    }
  </style>
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
  </head>
  <body>
    <%- include('./partials/nav')  %>
    <div class="container mt-3" >
        <div class ="row row-cols-3">
          <% blogs.forEach(blog => { %>
            <div class="col">
              <div class="card " style="width: 18rem ;">

                <img src="<%= blog.coverImageURL %>" class="card-img-top fixed-size-image" alt="...">

                <div class="card-body">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <a href="/blog/<%=blog._id%>" class="btn btn-primary">View</a>
                </div>
              </div>
            </div>
        <% }) %>  
        </div>
    </div>

    <%- include('./partials/scripts') %>
    
  </body>
</html>
