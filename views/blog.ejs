<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blog</title>
  </head>
  <body>
    <%- include('./partials/nav')  %>
        <div class="container mt-4">
            <h1><%= blog.title %></h1>
            <img src="<%= blog.coverImageURL %>" width = "200px" alt=""> 
            <pre class = "mt-3"><%= blog.body %></pre>
        </div>
        <div class="container mt-4">
          <img src="<%= blog.createdBy.profileImageURL %>" width="50px" ><%= blog.createdBy.fullName %>
        </div>
        <div class="container mt-3">
          <h1>Comments (<%= (comments.length) %>)</h1>
          <% if (locals.user) { %>
          <form action="/blog/comments/<%= blog._id %>" method="post">
            <div class="mt-4">
              <input
                type="text"
                class="form-control"
                name="content"
                placeholder="Enter your Comment"
              />
              <button type="submit" class="btn btn-sm btn-primary mt-4">Add</button>
            </div>
          </form>
          
          <% } %>
          <div class="mt-3">
            <% comments.forEach(comment => { %>
             <div>
              <img src="<%= comment.createdBy.profileImageURL %>" width="50px" ><%= blog.createdBy.fullName %>
              <pre><%= comment.content %></pre>
             </div>
            <% }) %>
          </div>
        </div>
    <%- include('./partials/scripts')  %>


  </body>
  </html>